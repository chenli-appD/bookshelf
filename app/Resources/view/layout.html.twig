<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="description" content="">
    <meta name="keywords" content="">

    <title>{{ title }} - Bookshelf</title>

    <!-- Bootstrap core CSS -->
    <link href="/vendor/css/bower_components/bootstrap/dist/css/bootstrap.css" rel="stylesheet">
    <link href="/vendor/css/bower_components/bootstrap/dist/css/material.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <![endif]-->
</head>

<body>

<div class="jumbotron">
    <div class="container">
        <h1>Bookshelf</h1>
    </div>
</div>
<div class="container">
    {% if session.isStarted %}
        {% for flashMessage in session.getFlashBag.get('notice') %}
            <div class="alert alert-info alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                {{ flashMessage }}
            </div>
        {% endfor %}
    {% endif %}
</div>

{% block content %}{% endblock %}

<footer class="footer-area">
    <div class="footer-top">
        <div class="container">
            <div class="row clearfix">
                <div class="col-md-12">
                </div>
            </div>
        </div>
    </div>
</footer>

<script type="text/javascript" src="/vendor/js/bower_components/jquery/dist/jquery.js"></script>
<script type="text/javascript" src="/vendor/js/bower_components/bootstrap/dist/js/bootstrap.js"></script>

{% block jsfooter %}{% endblock %}

</body>
</html>
