nginx:
  image: fntlnz/nginx:1.9.2
  volumes:
    - docker/nginx/conf:/usr/local/nginx/conf
  volumes_from:
    - fpm
  ports:
    - "127.0.0.10:80:80"
    - "127.0.0.10:10081:10081"
  links:
    - fpm:fpm

fpm:
  build: docker/dockerfiles/php
  volumes:
    - docker/fpm:/usr/local/php/etc
    - .:/var/www/penny-classic
