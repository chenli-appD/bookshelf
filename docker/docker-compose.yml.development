nginx:
  build: docker/development/nginx
  volumes_from:
    - fpm
  ports:
    - "80:80"
    - "10081:10081"
  volumes:
    - ./docker/development/nginx/conf:/usr/local/nginx/conf
  links:
    - fpm:fpm

fpm:
  build: docker/development/fpm
  volumes:
    - .:/var/www/bookshelf
    - ./docker/development/fpm/etc:/usr/local/php/etc
  links:
    - mysql:mysql
    - redis:redis

mysql:
  image: mysql:5.7
  environment:
    MYSQL_ROOT_PASSWORD: mysupersecretrootpassword

redis:
  image: redis
