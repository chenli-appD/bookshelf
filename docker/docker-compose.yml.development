nginx:
  build: docker/development/nginx/
  volumes_from:
    - fpm
  ports:
    - "80:80"
    - "10081:10081"
  links:
    - fpm:fpm

fpm:
  build: docker/development/fpm
  volumes:
    - .:/var/www/penny-classic
  links:
    - mysql:mysql

mysql:
  image: mysql:5.7
  environment:
    MYSQL_ROOT_PASSWORD: mysupersecretrootpassword
